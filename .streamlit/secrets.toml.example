# Streamlit Secrets Configuration
# Copy this file to secrets.toml and fill in your values
# DO NOT commit secrets.toml to git!

# MongoDB Atlas connection string
# Get this from MongoDB Atlas: Clusters → Connect → Connect your application
MONGODB_URI = "mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority"

# Optional: Cloudflare R2 for image storage (if not using MongoDB GridFS)
# R2_ACCESS_KEY_ID = "your-access-key"
# R2_SECRET_ACCESS_KEY = "your-secret-key"
# R2_BUCKET_NAME = "ui-tars-screenshots"
# R2_ENDPOINT_URL = "https://your-account.r2.cloudflarestorage.com"
